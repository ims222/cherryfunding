<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cherryfunding.spring.vo.FCommentMapper">

	<insert id="insert" parameterType="fComment">
		insert into fComment values(#{fcNum}, #{id}, #{fnum}, #{content}, sysdate)
	</insert>
	
	<select id="getMaxNum" resultType="int">
		select NVL(max(fcNum), 0) from fComment
	</select>
	
	<select id="commentList" parameterType="int" resultType="fComment">
		select * from fComment where fnum = #{fnum} order by fcNum
	</select>

</mapper>