<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cherryfunding.spring.vo.SItemMapper">
	<insert id="insert" parameterType="sItem">
		insert into sitem values(#{siNum}, #{sNum}, #{title}, #{amount})
	</insert>
	<select id="getMaxNum" resultType="int">
		select NVL(max(sinum), 0) from sitem
	</select>


	<select id="list" resultType="sItem">
		select * from sItem
	</select>

	<select id="select" parameterType="string" resultType="sItem">
		select * from sItem where id = #{id}
	</select>

	<update id="update" parameterType="sItem">
		update sItem set #{pwd} where #{id}
	</update>
	<delete id="delete" parameterType="string">
		delete from sItem where id=#{id}
	</delete>
</mapper>